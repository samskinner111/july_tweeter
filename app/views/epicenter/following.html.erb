<br>
<div class="row">
  <div class="col-md-2">
    <div class="row">
      <div class="col-md-3">
        <% if @user.avatar.url != nil %>
          <%= image_tag @user.avatar.url, class: "pic-user-stats" %>
        <% end %>  
      </div>
      <div class="col-md-9">
        <h3><%= @user.name %></h3>
        <p>@<%= @user.username %></p>
      </div>
    </div>
    <p><%= @user.bio %></p>
    <p><i class="fa fa-map-marker"></i> <%= @user.location %></p>
    <p><i class="fa fa-calendar"></i> Joined: <%= @user.created_at.strftime("%B %Y") %></p>
  </div>
  <div class="col-md-9 col-md-offset-1">
    <%= render 'user_list' %>
  </div>
</div>